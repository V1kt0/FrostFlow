@model FrostFlow.Models.Room

<link rel="stylesheet" href="~/css/Calculator.css" asp-append-version="true" />

<div class="container d-flex justify-content-center mt-5">
	<div class="card shadow-lg rounded-4 p-4" style="max-width: 500px; width: 100%;">
		<h2 class="text-center text-primary fw-bold">📏 Room AC Calculator</h2>
		<hr>

		<form asp-action="Calculate" method="post">
			<div class="form-floating mb-3">
				<input asp-for="Length" type="number" step="0.1" class="form-control" placeholder="Length" required />
				<label>Length (meters)</label>
			</div>

			<div class="form-floating mb-3">
				<input asp-for="Width" type="number" step="0.1" class="form-control" placeholder="Width" required />
				<label>Width (meters)</label>
			</div>

			<div class="form-floating mb-3">
				<input asp-for="Height" type="number" step="0.1" class="form-control" placeholder="Height" required />
				<label>Height (meters)</label>
			</div>

			<div class="form-floating mb-3">
				<select asp-for="Usage" class="form-select" required>
					<option value="bedroom">🛏️ Bedroom</option>
					<option value="living-room">🛋️ Living Room</option>
					<option value="kitchen">🍽️ Kitchen</option>
				</select>
				<label>Room Usage</label>
			</div>

			<div class="d-flex justify-content-between">
				<a asp-action="Index" class="btn btn-secondary rounded-pill px-4">⬅️ Back</a>
				<button type="submit" class="btn btn-primary rounded-pill px-4">📊 Calculate</button>
			</div>
		</form>
	</div>
</div>

<!-- FontAwesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
