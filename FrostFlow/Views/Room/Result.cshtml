@model FrostFlow.Models.Room

<link rel="stylesheet" href="~/css/CalculationResult.css" asp-append-version="true" />

<div class="container mt-5">
	<div class="card shadow-lg rounded-4 p-4">
		<h2 class="text-center text-primary fw-bold">📊 Calculation Result</h2>
		<hr>

		<div class="row">
			<div class="col-md-6">
				<p><strong>📏 Length:</strong> @Model.Length meters</p>
				<p><strong>📐 Width:</strong> @Model.Width meters</p>
				<p><strong>📏 Height:</strong> @Model.Height meters</p>
			</div>
			<div class="col-md-6">
				<p><strong>🏡 Room Usage:</strong> @Model.Usage</p>
				<p class="fw-bold text-success"><strong>❄️ Required Cooling Capacity:</strong> @Model.BTU BTUs</p>
			</div>
		</div>

		@if (ViewData["BestAC"] != null)
		{
			var bestAC = (FrostFlow.Models.AirConditioner)ViewData["BestAC"];
			<div class="card bg-light shadow-sm rounded-4 mt-4 p-3">
				<h3 class="text-center text-success">✅ Best AC Recommendation</h3>
				<p><strong>📌 Model:</strong> @bestAC.ModelName</p>
				<p><strong>🏢 Brand:</strong> @bestAC.Brand</p>
				<p><strong>💰 Price:</strong> <span class="text-success fw-bold">$@bestAC.Price</span></p>
				<p><strong>❄️ Cooling Capacity:</strong> @bestAC.CoolingCapacity BTU</p>
				<p><strong>🛠️ Type:</strong> @bestAC.Type</p>
				<p><strong>📝 Description:</strong> @bestAC.Description</p>
			</div>
		}

		<div class="text-center mt-4">
			<a asp-action="Index" class="btn btn-secondary rounded-pill px-4">⬅️ Back to Home</a>
		</div>
	</div>
</div>

<!-- FontAwesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
