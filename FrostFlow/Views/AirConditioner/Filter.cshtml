@model FrostFlow.Models.FilterAirConditionerViewModel

<link rel="stylesheet" href="~/css/FIlter.css" asp-append-version="true" />

<h1 class="text-center">Filter Air Conditioners</h1>

<!-- Filter Section -->
<form method="get" asp-action="Filter" class="mb-4">
	<div class="form-group">
		<label for="type" class="font-weight-bold">Type:</label>
		<select id="type" name="selectedType" class="form-control w-25 d-inline-block" onchange="this.form.submit()">
			<option value="">All</option>
			@foreach (var type in Model.Types)
			{
				<option value="@type" selected="@(type == Model.SelectedType ? "selected" : null)">@type</option>
			}
		</select>
	</div>
</form>

<!-- Category List -->
<div class="filter-categories mb-4">
	<ul class="list-group list-group-horizontal">
		<li class="list-group-item">
			<a asp-action="Filter" asp-route-type="" class="@(string.IsNullOrEmpty(Model.SelectedType) ? "active" : "")">
				All
			</a>
		</li>
		@foreach (var type in Model.Types)
		{
			<li class="list-group-item">
				<a asp-action="Filter" asp-route-type="@type" class="@(type == Model.SelectedType ? "active" : "")">
					@type
				</a>
			</li>
		}
	</ul>
</div>

<!-- Air Conditioners Table -->
<table class="table table-striped table-bordered">
	<thead class="thead-dark">
		<tr>
			<th>Model</th>
			<th>Brand</th>
			<th>Price</th>
			<th>Type</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var ac in Model.AirConditioners)
		{
			<tr>
				<td>@ac.ModelName</td>
				<td>@ac.Brand</td>
				<td>$@ac.Price</td>
				<td>@ac.Type</td>
			</tr>
		}
	</tbody>
</table>
